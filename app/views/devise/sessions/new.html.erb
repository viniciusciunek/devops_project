<h2 class="text-center text-xl font-bold p-2">ENTRE NA SUA CONTA</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col items-center w-full">
    <div class="field ">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
    <div class="field">
      <%= f.label :senha %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "FAZER LOGIN", class:"bg-green-500 p-2 text-white font-bold m-2" %>
    </div>
  </div>
  <div class="flex flex-row justify-center gap-2 items-center mt-2">
    <%= render "devise/shared/links" %>
  </div>
<% end %>
